{
  "name": "draft",
  "version": "0.0.1",
  "description": "Boilerplate for rapid prototyping",
  "main": "public/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "js": "node_modules/watchify/bin/cmd.js src/scripts/browser.js -o public/app.js",
    "css": "node_modules/catw/bin/cmd.js src/styles/*.css -o public/app.css -v",
    "server": "node_modules/http-server/bin/http-server public",
    "print": "node src/scripts/print.js",
    "start": "npm run js & npm run css & npm run server"
  },
  "author": "Giulian Drimba <giuliandrimba@gmail.com>",
  "license": "ISC",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^11.1.0",
    "catw": "^1.0.1",
    "http-server": "^0.8.0",
    "watchify": "^3.4.0"
  },
  "dependencies": {
    "canvas": "^1.3.15",
    "diverge": "^1.0.1",
    "get-canvas-pixel-color": "^1.0.0",
    "lodash": "^4.13.1",
    "raf-loop": "^1.1.3",
    "simplex-noise": "^2.2.0"
  }
}
